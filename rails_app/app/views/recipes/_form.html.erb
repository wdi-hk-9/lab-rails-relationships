<%= form_for([@course, @recipe]) do |f| %>
  <div class="field">
    <%= f.label :name%><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description%><br>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :servings%><br>
    <%= f.text_field :servings %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>